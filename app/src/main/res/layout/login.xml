<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <EditText
    android:id="@+id/et_pw"
    android:layout_width="279dp"
    android:layout_height="35dp"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="30dp"
    android:background="@drawable/radius"
    app:layout_constraintBottom_toTopOf="@+id/button"
    app:layout_constraintEnd_toEndOf="@+id/et_id"
    app:layout_constraintHorizontal_bias="0.88"
    app:layout_constraintStart_toStartOf="@+id/et_id"
    app:layout_constraintTop_toBottomOf="@+id/et_id"
    tools:ignore="MissingConstraints" />

  <ImageView
    android:id="@+id/img_loginLogo"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:layout_marginTop="70dp"
    android:layout_marginBottom="48dp"
    app:layout_constraintBottom_toTopOf="@+id/login_imgName"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/login_logo"
    tools:ignore="MissingConstraints" />

  <ImageView
    android:id="@+id/login_imgName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/img_loginLogo"
    app:srcCompat="@drawable/login_name"
    tools:ignore="MissingConstraints" />

  <TextView
    android:id="@+id/tv_id"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="ID"
    android:textColor="#000000"
    android:textSize="16sp"
    app:layout_constraintBottom_toTopOf="@+id/et_id"
    app:layout_constraintStart_toStartOf="@+id/et_id"
    tools:ignore="MissingConstraints" />

  <TextView
    android:id="@+id/tv_pw"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="PW"
    android:textColor="#000000"
    android:textSize="16sp"
    app:layout_constraintBottom_toTopOf="@+id/et_pw"
    app:layout_constraintStart_toStartOf="@+id/et_pw"
    tools:ignore="MissingConstraints" />

  <EditText
    android:id="@+id/et_id"
    android:layout_width="279dp"
    android:layout_height="35dp"
    android:layout_marginTop="70dp"
    android:background="@drawable/radius"
    app:layout_constraintEnd_toEndOf="@+id/login_imgName"
    app:layout_constraintStart_toStartOf="@+id/login_imgName"
    app:layout_constraintTop_toBottomOf="@+id/login_imgName"
    tools:ignore="MissingConstraints" />

  <Button
    android:id="@+id/button"
    android:layout_width="279dp"
    android:layout_height="35dp"
    android:layout_marginTop="30dp"
    android:background="@drawable/radius"
    android:backgroundTint="#EDF5FF"
    android:text="로그인"
    app:layout_constraintEnd_toEndOf="@+id/et_pw"
    app:layout_constraintStart_toStartOf="@+id/et_pw"
    app:layout_constraintTop_toBottomOf="@+id/et_pw" />

  <Button
    android:id="@+id/btn_register"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="30dp"
    android:backgroundTint="#00000000"
    android:text="회원가입"
    app:layout_constraintBottom_toBottomOf="@+id/tv_line"
    app:layout_constraintEnd_toStartOf="@+id/tv_line"
    app:layout_constraintStart_toStartOf="@+id/button"
    app:layout_constraintTop_toBottomOf="@+id/button" />

  <Button
    android:id="@+id/btn_findLogin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:backgroundTint="#00000000"
    android:text="ID/PW찾기"
    app:layout_constraintBottom_toBottomOf="@+id/tv_line"
    app:layout_constraintEnd_toEndOf="@+id/button"
    app:layout_constraintStart_toEndOf="@+id/tv_line"
    app:layout_constraintTop_toBottomOf="@+id/button" />

  <TextView
    android:id="@+id/tv_line"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="|"
    android:textColor="#000000"
    android:textSize="35sp"
    app:layout_constraintEnd_toEndOf="@+id/button"
    app:layout_constraintStart_toStartOf="@+id/button"
    app:layout_constraintTop_toBottomOf="@+id/button" />


</androidx.constraintlayout.widget.ConstraintLayout>