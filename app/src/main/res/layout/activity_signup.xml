<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  >

  <LinearLayout
    android:id="@+id/signupLinear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">


    <ImageView
      android:id="@+id/imageView9"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_marginBottom="15dp"
      app:srcCompat="@drawable/login_logo" />

    <ImageView
      android:id="@+id/imageView10"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:srcCompat="@drawable/signup" />


    <TextView
      android:id="@+id/tv_signid"
      android:layout_width="279dp"
      android:layout_height="wrap_content"
      android:text="E-mail"
      android:textColor="#000000"
      android:textSize="16sp"/>

    <LinearLayout
      android:layout_width="279dp"
      android:layout_height="wrap_content"
      android:weightSum="10"
      android:padding="0dp">

      <EditText
        android:id="@+id/et_signEmail"
        android:layout_height="35dp"
        android:layout_marginRight="10dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/radius"
        android:layout_weight="7"
        android:layout_width="0dp"/>

      <Button
        android:id="@+id/btn_checkId"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:text="중복 확인"
        android:layout_width="0dp"
        android:background="@drawable/radius"/>
    </LinearLayout>
    <TextView
      android:id="@+id/tv_idMessage"
      android:layout_width="279dp"
      android:layout_height="match_parent"
      android:gravity="right"
      android:textColor="#FF0000"
      android:text="TEXT"
      android:textSize="10sp"
      android:layout_marginBottom="15dp"/>


    <LinearLayout
      android:layout_width="279dp"
      android:layout_height="match_parent">
      <TextView
        android:id="@+id/tv_signpw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:text="PW"
        android:textColor="#000000"
        android:layout_marginRight="10dp"
        android:textSize="16sp" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:text="@string/pwAtrr"/>

    </LinearLayout>

    <EditText
      android:id="@+id/et_signPw"
      android:inputType="textPassword"
      android:layout_width="279dp"
      android:layout_height="35dp"
      android:maxLength="12"
      android:background="@drawable/radius"/>
    <TextView
      android:id="@+id/tv_pwMessage"
      android:layout_width="279dp"
      android:layout_height="match_parent"
      android:textColor="#FF0000"
      android:textSize="10sp"
      android:gravity="right"
      android:layout_marginBottom="15dp"
      android:text="0 / 12"/>



    <TextView
      android:id="@+id/tv_signname"
      android:layout_width="279dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="3dp"
      android:text="성명"
      android:textColor="#000000"
      android:textSize="16sp" />

    <EditText
      android:id="@+id/et_signName"
      android:layout_width="279dp"
      android:inputType="textPersonName"
      android:layout_height="35dp"
      android:background="@drawable/radius"
      android:layout_marginBottom="15dp"/>

    <TextView
      android:id="@+id/tv_signphone"
      android:layout_width="279dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="3dp"
      android:text="전화번호"
      android:textColor="#000000"
      android:textSize="16sp" />

    <EditText
      android:id="@+id/et_signPhone"
      android:layout_width="279dp"
      android:layout_height="35dp"
      android:inputType="phone"
      android:layout_marginBottom="15dp"
      android:background="@drawable/radius" />

    <TextView
      android:id="@+id/tv_signaddress"
      android:layout_width="279dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="3dp"
      android:text="주소"
      android:textColor="#000000"
      android:textSize="16sp"
      />

    <EditText
      android:id="@+id/et_signAddress"
      android:layout_width="279dp"
      android:layout_height="35dp"
      android:background="@drawable/radius"
      android:inputType="textPostalAddress"
      android:layout_marginBottom="15dp"/>

    <TextView
      android:id="@+id/tv_signschool"
      android:layout_width="279dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="3dp"
      android:text="학교"
      android:textColor="#000000"
      android:textSize="16sp" />

    <EditText
      android:id="@+id/et_SignUniv"
      android:layout_width="279dp"
      android:layout_height="35dp"
      android:background="@drawable/radius"
      android:layout_marginBottom="15dp"/>

    <TextView
      android:id="@+id/tv_nickname"
      android:layout_width="279dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="3dp"
      android:text="닉네임"
      android:textColor="#000000"
      android:textSize="16sp" />

    <EditText
      android:id="@+id/et_signNickname"
      android:layout_width="279dp"
      android:layout_height="35dp"
      android:background="@drawable/radius"/>
    <TextView
      android:id="@+id/tv_nicknameMessage"
      android:layout_width="279dp"
      android:layout_height="match_parent"
      android:textColor="#FF0000"
      android:textSize="10sp"
      android:gravity="right"
      android:layout_marginBottom="15dp"
      android:text="TEXT"/>

    <TextView
      android:id="@+id/personalInfo"
      android:layout_width="279dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="15dp"
      android:text="@string/personInfoTitle"
      android:textColor="#000000"
      android:textSize="16sp"/>

    <androidx.core.widget.NestedScrollView
      android:layout_width="279dp"
      android:layout_height="250dp"
      android:background="@drawable/radius"
      android:layout_marginBottom="15dp"
      android:scrollbarFadeDuration = "0"
      android:scrollbarAlwaysDrawVerticalTrack = "true">
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:padding="5dp"
          android:textColor="@color/black"
          android:text="@string/Info" />
      </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <RadioGroup
      android:id="@+id/radio_groupAccept"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:orientation="horizontal" >

      <RadioButton
        android:id="@+id/radio_Accept"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accept" />

      <RadioButton
        android:id="@+id/radio_Decline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginBottom="20dp"
        android:text="Decline" />
    </RadioGroup>

    <Button
      android:id="@+id/btn_signup"
      android:layout_width="279dp"
      android:layout_height="match_parent"
      android:background="@drawable/radius"
      android:backgroundTint="#EDF5FF"
      android:text="회원가입"/>





  </LinearLayout>

</ScrollView>